<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="biblioteca.AggiungiPrestitoController">

    <top>
        <HBox prefHeight="38.0" prefWidth="600.0"
              style="-fx-background-color: #3b74a8;"
              BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER"
                       prefHeight="38.0" prefWidth="715.0"
                       text="Nuovo Prestito" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="26.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <Pane prefHeight="385.0" prefWidth="500.0"
              style="-fx-background-color: #f5f5f5;"
              BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER"
                      prefHeight="360.0" prefWidth="484.0">
                    <children>

                        <HBox prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Label prefHeight="30.0" prefWidth="120.0" text="Matricola utente:" />
                                <TextField fx:id="txtMatricola" alignment="CENTER" />
                            </children>
                            <VBox.margin>
                                <Insets left="120.0" right="90.0" top="40.0" />
                            </VBox.margin>
                        </HBox>

                        <HBox prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Label prefHeight="30.0" prefWidth="120.0" text="Nome utente:" />
                                <TextField fx:id="txtNomeUtente" alignment="CENTER" />
                            </children>
                            <VBox.margin>
                                <Insets left="120.0" right="90.0" />
                            </VBox.margin>
                        </HBox>

                        <HBox prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Label prefHeight="30.0" prefWidth="120.0" text="Titolo libro:" />
                                <TextField fx:id="txtTitoloLibro" alignment="CENTER" />
                            </children>
                            <VBox.margin>
                                <Insets left="120.0" right="90.0" />
                            </VBox.margin>
                        </HBox>

                        <HBox prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Label prefHeight="30.0" prefWidth="120.0" text="ISBN libro:" />
                                <TextField fx:id="txtIsbnLibro" alignment="CENTER" />
                            </children>
                            <VBox.margin>
                                <Insets left="120.0" right="90.0" />
                            </VBox.margin>
                        </HBox>

                        <HBox prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Label prefHeight="30.0" prefWidth="120.0" text="Data scadenza:" />
                                <TextField fx:id="txtDataScadenza" alignment="CENTER" />
                            </children>
                            <VBox.margin>
                                <Insets left="120.0" right="90.0" />
                            </VBox.margin>
                        </HBox>

                        <HBox prefHeight="64.0" prefWidth="600.0">
                            <children>
                                <Pane prefHeight="64.0" prefWidth="251.0" />
                                <Button fx:id="btnSalvaPrestito"
                                        mnemonicParsing="false"
                                        onAction="#handleSalvaPrestito"
                                        style="-fx-background-color: #2E8B57;"
                                        text="Conferma Prestito"
                                        textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnAnnulla"
                                        mnemonicParsing="false"
                                        onAction="#handleAnnulla"
                                        style="-fx-background-color: #FF0000;"
                                        text="Annulla"
                                        textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>

                    </children>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor>
                </VBox>
            </children>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
            <effect>
                <DropShadow />
            </effect>
            <BorderPane.margin>
                <Insets right="30.0" top="40.0" />
            </BorderPane.margin>
        </Pane>
    </center>

    <right>
        <Pane prefHeight="400.0" prefWidth="121.0" BorderPane.alignment="CENTER" />
    </right>
    <left>
        <Pane prefHeight="400.0" prefWidth="121.0" BorderPane.alignment="CENTER" />
    </left>
    <bottom>
        <Pane prefHeight="40.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>