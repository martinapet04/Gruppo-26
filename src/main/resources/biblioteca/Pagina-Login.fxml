<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="biblioteca.LoginController">

<top>
        <HBox prefHeight="84.0" prefWidth="600.0"
              style="-fx-background-color: #4682B4;"
              BorderPane.alignment="CENTER">
            <children>
                <Pane prefHeight="84.0" prefWidth="560.0">
                    <children>
                        <ImageView fitHeight="70.0" fitWidth="70.0"
                                   layoutX="7.0" layoutY="6.0"
                                   pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@logo_web_bi.png" />
                            </image>
                        </ImageView>
                        <Label contentDisplay="CENTER"
                               layoutX="93.0" layoutY="8.0"
                               prefHeight="67.0" prefWidth="428.0"
                               text="Gestione Biblioteca Universitaria"
                               textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="25.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
            </children>
        </HBox>
    </top>

    <left>
        <Pane prefHeight="239.0" prefWidth="129.0" BorderPane.alignment="CENTER" />
    </left>

    <bottom>
        <Pane prefHeight="37.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
    </bottom>

    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Pane prefHeight="37.0" prefWidth="342.0" />
                <Pane prefHeight="260.0" prefWidth="380.0" style="-fx-background-color: #f0f0f0;">
                    <effect>
                        <DropShadow />
                    </effect>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor>
                    <children>
                        <VBox prefHeight="252.0" prefWidth="343.0" spacing="12.0">
                            <padding>
                                <Insets top="20.0" />
                            </padding>
                            <children>
                                <Label prefHeight="17.0" prefWidth="190.0" text="         Username" />
                                <TextField fx:id="txtUsername" promptText="Enter Username">
                                    <VBox.margin>
                                        <Insets left="40.0" right="40.0" />
                                    </VBox.margin>
                                </TextField>

                                <Label prefHeight="17.0" prefWidth="138.0" text="          Password">
                                    <VBox.margin>
                                        <Insets right="40.0" />
                                    </VBox.margin>
                                </Label>
                                <PasswordField fx:id="txtPassword"
                                               prefHeight="25.0" prefWidth="50.0"
                                               promptText="Enter Password">
                                    <VBox.margin>
                                        <Insets left="40.0" right="40.0" />
                                    </VBox.margin>
                                </PasswordField>

                                <CheckBox fx:id="chkRicordami" mnemonicParsing="false"
                                          prefHeight="17.0" prefWidth="102.0"
                                          text="Ricordami">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
                                    </VBox.margin>
                                </CheckBox>

                                <HBox prefHeight="54.0" prefWidth="343.0" spacing="10.0">
                                    <children>
                                        <Pane prefHeight="23.0" prefWidth="40.0" />
                                        <Button text="Accedi" onAction="#handleLogin" />
                                        <Button text="Annulla" onAction="#handleAnnulla" />
                                        <Pane prefHeight="23.0" prefWidth="40.0" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </Pane>
            </children>
        </VBox>
    </center>

    <right>
        <Pane prefHeight="239.0" prefWidth="129.0" BorderPane.alignment="CENTER" />
    </right>
</BorderPane>