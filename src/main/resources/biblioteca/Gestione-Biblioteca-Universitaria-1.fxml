<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="root"
            maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="biblioteca.HomeController">

    <top>
        <HBox prefHeight="116.0" prefWidth="600.0"
              style="-fx-background-color: #4682B4;"
              BorderPane.alignment="CENTER">
            <children>
                <Pane prefHeight="116.0" prefWidth="600.0">
                    <children>
                        <ImageView fitHeight="100.0" fitWidth="107.0"
                                   layoutX="7.0" layoutY="6.0"
                                   pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@logo_web_bi.png" />
                            </image>
                        </ImageView>
                        <Label contentDisplay="CENTER"
                               layoutX="124.0" layoutY="7.0"
                               prefHeight="102.0" prefWidth="467.0"
                               text="Gestione Biblioteca Universitaria"
                               textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="25.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
            </children>
        </HBox>
    </top>

    
    <right>
        <VBox prefWidth="180.0"
              minWidth="160.0" maxWidth="220.0"
              BorderPane.alignment="CENTER"
              fillWidth="true" spacing="10.0"
              style="-fx-padding: 20 20 20 0;">
            <children>

                
                <VBox spacing="8.0" fillWidth="true">
                    <children>
                        <Button fx:id="btnLogin"
                                text="Login" textFill="WHITE"
                                style="-fx-background-color: #4682B4;"
                                onAction="#handleApriLogin"
                                maxWidth="Infinity">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>

                        <Button fx:id="btnCatalogoLibri"
                                text="Catalogo Libri" textFill="WHITE"
                                style="-fx-background-color: #4682B4;"
                                onAction="#handleApriCatalogoLibri"
                                maxWidth="Infinity">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Button>

                        <Button fx:id="btnElencoPrestiti"
                                text="Elenco Prestiti" textFill="WHITE"
                                style="-fx-background-color: #4682B4;"
                                onAction="#handleApriPrestiti"
                                maxWidth="Infinity">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Button>

                        <Button fx:id="btnElencoUtenti"
                                text="Elenco Utenti" textFill="WHITE"
                                style="-fx-background-color: #4682B4;"
                                onAction="#handleApriUtenti"
                                maxWidth="Infinity">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>

               
                <Text strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Leggere è andare incontro a qualcosa che sta per essere e ancora nessuno sa cosa sarà."
                      textAlignment="CENTER" wrappingWidth="160.0">
                    <font>
                        <Font name="Georgia" size="12.0" />
                    </font>
                </Text>

                <Text strokeType="OUTSIDE" strokeWidth="0.0"
                      text="-Italo Calvino" textAlignment="RIGHT">
                    <font>
                        <Font name="Georgia Italic" size="11.0" />
                    </font>
                </Text>
            </children>
        </VBox>
    </right>

    
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="imgSfondo"
                           pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@Sfondo.png" />
                    </image>
                </ImageView>
            </children>
        </StackPane>
    </center>

</BorderPane>
