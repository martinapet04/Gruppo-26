<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="biblioteca.NuovoUtenteController">

    <center>
        <VBox spacing="10.0" alignment="CENTER">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>
            <children>
                <Label text="REGISTRAZIONE NUOVO UTENTE"/>

                <GridPane hgap="10" vgap="10">
                    <children>
                        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Cognome:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtCognome" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Matricola:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtMatricola" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Email Istituzionale:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtEmail" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="10"/>
            </padding>
            <children>
                <Button text="Annulla" onAction="#handleAnnulla"
                        style="-fx-background-color:#FF0000; -fx-text-fill:white;"/>
                <Button text="Salva Utente" onAction="#handleSalvaUtente"
                        style="-fx-background-color:#2E8B57; -fx-text-fill:white;"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>